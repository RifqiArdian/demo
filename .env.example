# Example environment variables for local development
# Copy this file to `.env` and fill the secret values (do NOT commit `.env`)

# Database configuration
DB_USERNAME=postgres
DB_PASSWORD=change_me
DB_NAME=product
DB_PORT=5432
DB_HOST=postgres
# Optional: override JDBC URL (if set, SPRING_DATASOURCE_URL takes precedence)
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT secret (use a long random base64 string, do not commit to repo)
# Generate with: openssl rand -base64 64  (or PowerShell example in README)
JWT_SECRET=replace_with_long_base64_secret

# Spring profile (optional)
SPRING_PROFILES_ACTIVE=dev
